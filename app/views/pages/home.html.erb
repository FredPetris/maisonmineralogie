<!-- NOTRE ACTUALITE -->
<section class="section-articles">
  <div class="container">
    <h2 class="section-title">Notre actualité</h2>
    <div class="row articles-block">
      <% @articles.each do |article| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <div class="article-card">
            <h3><%= article.title %></h3>
            <p class="article-date"><%= article.created_at %></p>
            <div class="article-picture">
              <%= image_tag article.picture if article.picture %>
            </div>
            <p class="article-text"><%= article.text %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</section>

<!-- LOGOS -->
<section class="section-logos">
  <div class="container">
    <h2 class="section-title">Ils nous soutiennent !</h2>
    <div class="row">
      <% @logos.in_groups_of(6) do |logos_group| %>
        <div class="logos">
          <% logos_group.each do |logo| %>
            <% if logo %>
              <%= link_to (image_tag logo.picture), logo.link, target: "_blank" %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>
