<!-- LOGOS -->
<section class="section-logos">
  <div class="container">
    <h2 class="section-title">Ils nous soutiennent !</h2>
    <div class="row">
      <% @logos.in_groups_of(6) do |logos_group| %>
        <div class="logos">
          <% logos_group.each do |logo| %>
            <% if logo %>
              <%= link_to logo.link, target: "_blank" do %>
                <%= image_tag logo.picture, class: "#{logo.name}" %>
              <% end %>
            <% end %>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>

