<% content_for :meta_title %>
<% content_for :meta_description %>
<% content_for :meta_image %>

<!-- HEADER -->
<div id="header" class="home">
  <div class="container-fluid header-content">
    <div class="row">
      <div class="col-xs-12 text-center">
        <!-- HEADER CONTENT -->
        <%= image_tag 'logos/logo_MMC_blanc.svg', class: 'header-logo' %>
        <%= image_tag 'illustrations/carte_france_contour.svg', class: 'header-map' %>
        <%= image_tag 'illustrations/tampon.svg', class: 'header-tampon' %>
        <% theme = randomized_background %>
        <%= image_tag theme[:picture], class: 'header-image' %>
        <div class='header-text'>
          <h1 class="header-title">maison de la minéralogie</h1>
          <p class="header-subtitle">La planète cristalline révélée dans ses formes les plus créatives</p>
          <!-- Begin MailChimp Signup Form -->
          <!-- <%#= render "shared/newsletter" %> -->
          <!-- BOUCING ARROW -->
          <a href="#presentation" rel="Go to the service presentation section">
            <i><%= image_tag "icons/play.png", class: 'play pulsed hidden-xs' %></i>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- PRESENTATION - MAISON DE LA MINERALOGIE -->
<section class="section-presentation" id="presentation">
  <div class="container-fluid presentation">
    <!-- BLOCK PORTE -->
    <div class="presentation-image">
      <%= image_tag 'backgrounds/porte.png', class: "front-door"%>
      <!-- SLICK SLIDER -->
      <div class="container door-carousel">
        <% @minerals.each do |mineral| %>
          <div class="mineral-card">
            <%= image_tag mineral.picture %>
          </div>
        <% end %>
      </div>
    </div>
    <!-- BLOCK DESCRIPTION -->
    <div class="presentation-block">
      <h3 class="presentation-subtitle">Pour une dynamique des patrimoines scientifique et culturel</h3>
      <p class="">Une collection minéralogique d’exception, des cristaux aux formes et couleurs révélées par la lumière.</p>
      <p class="">Une médiation numérique collective et individuelle adaptée aux motivations de chacun.</p>
      <p class="">Un hébergement historique sur le chemin de Saint Jacques de Compostelle.</p>
      <p class="">Un environnement pyrénéen propice à la découverte des sciences de la Terre.</p>
      <!-- CTA - Les acteurs -->
      <div id="animated-modal" class='button button-white button-hover-brown-lighter button-home-acteurs'>
         Les acteurs
      </div >
    </div>
  </div>
</section>


<!-- LE CONCEPT -->
<section class="section-concept <%= theme[:color] %>">
  <div class="container">
    <h2 class="section-title">Le concept</h2>
    <div class="concept-block">
      <div class="concept-block-item">
        <%=image_tag "icons/rock_collection.png" %>
        <p>Exposition permanente des collections générales de la Maison de la Minéralogie de Chalabre</p>
      </div>
      <div class="concept-block-item">
        <%=image_tag "icons/fossil.png" %>
        <p>Expositions temporaires, spécifiques et didactiques</p>
      </div>
      <div class="concept-block-item">
        <%=image_tag "icons/workshop.png" %>
        <p>Atelier numérique, travaux pratiques</p>
      </div>
      <div class="concept-block-item">
        <%=image_tag "icons/think_bubble.png" %>
        <p>Conférences, colloques, sessions d’études, séminaires, partenariats éducatifs et universitaires</p>
      </div>
      <div class="concept-block-item">
        <%=image_tag "icons/boutique_jardin.png" %>
        <p>Boutique, coin détente, jardin, porte ouverte sur le territoire et les Pyrénées</p>
      </div>
    </div>
    <!-- CTA -  Le projet -->
    <div id="animated-modal" class='button button-white button-hover-brown-lighter button-home-projet'>
       Le projet
    </div >
  </div>
</section>

